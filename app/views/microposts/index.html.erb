<%# <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> %>
<h4 class='d-flex justify-content-between mb-4'>
<span>Posts</span>
<%= link_to 'New Micropost', new_micropost_path, class: 'btn btn-primary' %>
</h4>

<% @microposts.each do |micropost|%>
  <%= link_to micropost do %>
    <div class="card">
      <div class="card-body">
        <h5 class='card-name'><%= micropost.user.name %> </h5>
        <p> <%= micropost.content %></p>
      </div>
    </div>
  
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user.name %></td>
        <td><%= link_to 'Show', micropost %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


