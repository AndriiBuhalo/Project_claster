<%= link_to like_micropost_path(micropost), method: :patch, remote: true, id: "like-link-#{micropost.id}" do %>
  <% if current_user.voted_up_by?(micropost) %>
    UP voted
    <b>
      <%= micropost.cached_votes_score %>
    </b>
    DOWN vote
  <% elsif current_user.voted_down_by?(micropost) %>
    UP vote
    <b>
      <%= micropost.cached_votes_score %>
    </b>
    DOWN voted
  <% else %>
    UP
    <b>
      <%= micropost.cached_votes_score %>
    </b>
    DOWN
  <% end %>
<% end %>
