
<%= content_tag "div", id: "upvote-#{micropost.id}" do %>
  <%= link_to upvote_micropost_path(micropost), method: :patch, remote: true do %>
    <% if current_user.voted_up_on? micropost %>
      <i class="far fa-thumbs-up" style="color: green;"></i>
      unvote
      <% else %>
      <i class="far fa-thumbs-up"></i>
      vote!
    <% end %>
  <% end %>
<% end %>